{
  "name": "flinter-backend",
  "version": "0.0.1",
  "description": "Backend core for flinter",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist/* && babel src -d dist/",
    "dev": "nodemon --exec babel-node -- ./src/index.js",
    "precommit": "npm test",
    "test": "standard && ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arjunskumar47/flinter-backend.git"
  },
  "keywords": [
    "flinter",
    "backend"
  ],
  "author": "khubo (aswinrajv@gmail.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arjunskumar47/flinter-backend/issues"
  },
  "homepage": "https://github.com/arjunskumar47/flinter-backend#readme",
  "dependencies": {
    "bluebird": "^3.5.1",
    "config": "^1.30.0",
    "joi": "^13.1.2",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-cors": "0.0.16",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "mongoose": "^5.0.12",
    "only": "0.0.2",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-preset-import-export": "^1.0.2",
    "husky": "^0.14.3",
    "nodemon": "^1.17.2",
    "standard": "^11.0.1",
    "supertest": "^3.0.0"
  },
  "standard": {
    "ignore": [
      "dist/"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 5,
    "faliFast": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
